@{
    ViewData["Title"] = "Home Page";
}

    <!-- Hero Section -->
    <section class="hero text-center d-flex align-items-center justify-content-center">
        <div>
            <h1 class="display-4 fw-bold">Welcome to FCG Asset Management Portal</h1>
            <p class="lead">Track, manage, and control your organization's assets with ease.</p>
            <a href="/Account/Register" class="btn btn-primary btn-lg">Get Started</a>
        </div>
    </section>

    <!-- About Section -->
    <section class="py-5 text-center">
        <div class="container">
            <h2 class="mb-4">What We Do</h2>
            <div class="row">
                <div class="col-md-4">
                    <i class="bi bi-shield-lock" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">Secure System</h5>
                    <p>Robust security for all your user and asset data.</p>
                </div>
                <div class="col-md-4">
                    <i class="bi bi-bar-chart" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">Real-Time Insights</h5>
                    <p>Track and analyze assets in real time.</p>
                </div>
                <div class="col-md-4">
                    <i class="bi bi-people" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">Role-Based Access</h5>
                    <p>Control access for admins, employees, and users.</p>
                </div>
            </div>
        </div>
    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


