@using System.Security.Claims
@model UsersApp.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}
@if (ViewBag.Message != null)
{
    <p style="color: green;">@ViewBag.Message</p>
}
<div class="Profile-container">
<div class="Profile-box">
    <h2 class="text-center mb-4">Profile</h2>
<form asp-action="Edit" method="post">
    <label>Full Name:</label>
    <input asp-for="Name" class="form-control" />

    <label>Email:</label>
    <input asp-for="Email" class="form-control"/>

    <label>Date of Birth:</label>
    <input asp-for="DOB" type="date" class="form-control" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
    <span asp-validation-for="DOB" class="text-danger"></span>

    <label>Address:</label>
    <input asp-for="Address" class="form-control" />
    <label>10th Marks:</label>
    <br />
    <input asp-for="Xth_Marks" type="number" name="Xth_Marks" step="0.01" min="0" max="100" required />
    <br />
    <label>12th Marks:</label>
    <br />
    <input asp-for= "XIIth_Marks" type="number" name="XIIth_Marks" step="0.01" min="0" max="100" required />
<br />
    <label>UG Marks:</label>
    <br />
   <input asp-for="UG_Marks" type="number" name="UG_Marks" step="0.01" min="0" max="100" required />
<br />
    <label>PG Marks:</label>
    <br />
    <input asp-for="PG_Marks" type="number" name="PG_Marks" step="0.01" min="0" max="100" required />
<br />
    <label>PhoneNumber:</label>
    <input asp-for="PhoneNumber" class="form-control" max="10" required/>
    <br />
    <button type="submit" class="btn btn-primary">Edit</button>
</form>
</div>
</div>