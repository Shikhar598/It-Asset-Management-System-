@model UsersApp.ViewModels.ProfileViewModel
@{
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}
<div class="glass-wrapper d-flex align-items-center justify-content-center min-vh-100">
    <div class="glass-card p-5 shadow-lg rounded-4 w-100" style="max-width: 650px;">
        <h2 class="text-center mb-4 fw-bold">Create New Profile</h2>

        <form asp-action="AddUser" method="post" novalidate>
            <div class="row g-3">
                <div class="col-md-12">
                    <label class="form-label">Full Name</label>
                    <input asp-for="Name" class="form-control glass-input" placeholder="John Doe" />
                </div>

                <div class="col-md-12">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" class="form-control glass-input" placeholder="example@email.com" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Date of Birth</label>
                    <input asp-for="DOB" type="date" class="form-control glass-input" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DOB" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control glass-input" pattern="\d{10}" maxlength="10" placeholder="9876543210" />
                </div>

                <div class="col-md-12">
                    <label class="form-label">Address</label>
                    <input asp-for="Address" class="form-control glass-input" placeholder="123 Main Street" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">10th Marks</label>
                    <input asp-for="Xth_Marks" type="number" step="0.01" class="form-control glass-input" placeholder="%" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">12th Marks</label>
                    <input asp-for="XIIth_Marks" type="number" step="0.01" class="form-control glass-input" placeholder="%" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">UG Marks</label>
                    <input asp-for="UG_Marks" type="number" step="0.01" class="form-control glass-input" placeholder="%" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">PG Marks</label>
                    <input asp-for="PG_Marks" type="number" step="0.01" class="form-control glass-input" placeholder="%" />
                </div>

                <div class="col-12 mt-4">
                    <button type="submit" class="btn w-100 py-2 modern-btn">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>
